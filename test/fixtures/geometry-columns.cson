postgres: '''
CREATE TABLE IF NOT EXISTS "organization_1"."users" (
  "id" bigserial NOT NULL,
  "geom" geometry(Geometry, 4326),
  CONSTRAINT "users_pkey" PRIMARY KEY (id)
);
'''

